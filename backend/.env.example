# ============================================
# BIBBI v2 Backend Environment Variables
# ============================================

# Application Settings
APP_NAME="BIBBI Sales Analytics Platform"
APP_VERSION="2.0.0"
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security (CRITICAL: Generate secure keys for production)
SECRET_KEY=your-super-secret-key-min-32-characters-long-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key-here
SUPABASE_SERVICE_KEY=your-service-role-secret-key-here

# Database (Optional: Direct PostgreSQL connection)
# DATABASE_URL=postgresql://user:password@localhost:5432/bibbi

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# SendGrid Email Service
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourcompany.com
SENDGRID_FROM_NAME=BIBBI Analytics

# File Upload Settings
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=[".xlsx",".xls",".csv"]
UPLOAD_DIR=/tmp/uploads

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
